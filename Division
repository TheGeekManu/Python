import math

def division():
    """ This code provides float division arithmetic functionality """

    integerInputOne = float(input('Enter the first number: '))
    integerInputTwo = float(input('Enter the second number: '))
    print("You entered " + str(integerInputOne) + " and " + str(integerInputTwo))

    try:
        result = integerInputOne / integerInputTwo
        print()
        print("The results of the division of " + str(integerInputOne)+ " and " +str(integerInputTwo) + " is: " + str(result))

    except ValueError:
        print("Integers Please")

division()
